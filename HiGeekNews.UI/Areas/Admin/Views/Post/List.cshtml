
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h4>List of Posts</h4>
                </div>
                <div class="box-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Header</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Status</th>
                                <th>Publish Date</th>
                                <th>Image</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Header</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.AppUser.UserName</td>
                                    <td>@item.Status</td>
                                    <td>@item.PublishDate</td>
                                    <td><img src="@item.ImagePath" style="width:75px;height:75px;" /></td>
                                    <td>
                                        <a href="/Admin/Post/Detail/@item.Id" class="btn btn-info">Detalis</a> |
                                        <a href="/Admin/Post/Update/@item.Id" class="btn btn-warning">Update</a> |
                                        <a href="/Admin/Post/Delete/@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="/Admin/Post/Create" class="btn btn-block btn-primary">Back to Creation</a>
                </div>
            </div>
        </div>
    </div>
</section>


